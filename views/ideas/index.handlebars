{{#each ideas}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <h6>{{date}}</h6>
  <p>{{details}}</p>
  <a class="btn btn-outline-secondary btn-sm mb-2" href="/ideas/edit/{{id}}">Edit</a>
  <form action="/ideas/{{id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-outline-danger btn-sm btn-block" value="Delete">
  </form>
</div>
{{else}}
<p>No BrainStorm ideas listed</p>
{{/each}}